{
    "name": "webtize/shopify-graphql-sdk",
    "description": "Modern PHP SDK for Shopify GraphQL Admin API",
    "type": "library",
    "keywords": ["shopify", "graphql", "api", "sdk", "e-commerce"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jigarkumar Patel",
            "email": "jigar@webtize.com.au"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0|^2.0",
        "psr/http-factory": "^1.0",
        "php-http/discovery": "^1.19"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "php-http/guzzle7-adapter": "^1.0",
        "nyholm/psr7": "^1.8",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.13"
    },
    "suggest": {
        "php-http/guzzle7-adapter": "For using Guzzle as HTTP client",
        "symfony/http-client": "For using Symfony HTTP client",
        "nyholm/psr7": "For PSR-7 message implementations"
    },
    "autoload": {
        "psr-4": {
            "ShopifyGraphQL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ShopifyGraphQL\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "cs-fix": "php-cs-fixer fix"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}